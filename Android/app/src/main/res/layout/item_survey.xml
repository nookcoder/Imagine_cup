<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="30dp">
<!--    버튼 클릭 시 색상 변경하려면 drawable/selector_survey_radio_button 수정하면 됨 -->
    <TextView
        android:id="@+id/survey_question"
        android:textColor="#222222"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What did you not plan to do today and why?"
        android:textSize="15sp"
        android:layout_marginTop="20sp"/>

    <RadioGroup
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/survey_radiobutton_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layoutDirection="rtl"
            android:gravity="center"
            android:button="@null"
            android:drawableTop="@drawable/selector_survey_radio_button1"
            android:text="1"

             />

            <RadioButton
                android:id="@+id/survey_radiobutton_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:button="@null"
                android:drawableTop="@drawable/selector_survey_radio_button2"
                android:gravity="center"
                android:text="2"
                />
            <RadioButton
                android:layout_gravity="center"
                android:gravity="center"
                android:drawableTop="@drawable/selector_survey_radio_button3"
                android:layout_margin="20dp"
                android:id="@+id/survey_radiobutton_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:button="@null"
                android:text="3"
                />


            <RadioButton
                android:id="@+id/survey_radiobutton_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layoutDirection="rtl"
                android:button="@null"
                android:drawableTop="@drawable/selector_survey_radio_button4"
                android:gravity="center"
                android:text="4"
                />
    </RadioGroup>
    <View
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:background="#E7E7E7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />
</LinearLayout>