<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.mission.Music"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/bebasneue_regular"
        android:gravity="top"
        android:text="@string/mission"
        android:textAppearance="@style/mission"
        tools:targetApi="jelly_bean"
        android:layout_marginStart="22dp"/>

    <TextView
        android:id="@+id/music_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="Let's Meditate"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingLeft="22dp"
        android:layout_marginTop="30sp"
        android:layout_marginBottom="70sp"
        />

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/youTubePlayerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/youtubeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:drawableTop="@drawable/play_black"
        android:background="@null"
        android:textColor="#000000"
        android:layout_marginTop="90sp"
        android:layout_gravity="center"/>
    <Button
        android:layout_marginTop="10sp"
        android:id="@+id/music_button_clear"
        android:background="@drawable/button_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:layout_marginBottom="50dp"
        android:backgroundTint="#0C6B66"
        android:textColor="@color/white"
        />

</LinearLayout>